<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f9f8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_av_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人资料"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_layout2_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_layout1"
        android:background="#f6f9f8"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/user_iv_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/contactlogo" />

        <TextView
            android:id="@+id/user_tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="昵称"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/user_layout3_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_layout2_user"
        android:layout_marginTop="2dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="昵称"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/right"
            android:text="更改"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_layout4_ew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_layout3_nick"
        android:layout_marginTop="2dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="二维码"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/tb_icon_home_qrcode_gray" />
    </RelativeLayout>

    <Button
        android:id="@+id/user_bt_nologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_def_selected_color"
        android:text="退出"
        android:textSize="20sp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    app:cardBackgroundColor="#e2dfdf"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/collect_layout_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/collect_item_iv"
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:src="@drawable/category_child" />

            <TextView
                android:id="@+id/collect_item_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/collect_item_iv"
                android:gravity="center"
                android:singleLine="true"
                android:text="商品详情：ccccccc"
                android:textSize="15sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/collect_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/collect_layout_iv"
            android:src="@mipmap/delete" />
    </RelativeLayout>
</android.support.v7.widget.CardView>